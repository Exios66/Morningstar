{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["lastUpdated", "activeWork", "decisions", "outstandingIssues"],
  "properties": {
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the last update to this state."
    },
    "activeWork": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of currently active tasks or features."
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["topic", "decision", "rationale", "risk"],
        "properties": {
          "topic": { "type": "string" },
          "decision": { "type": "string" },
          "rationale": { "type": "string" },
          "risk": { "type": "string" },
          "votes": {
            "type": "object",
            "properties": {
              "Architect": { "type": "string", "enum": ["YES", "NO", "ABSTAIN", "RECUSED"] },
              "Engineer": { "type": "string", "enum": ["YES", "NO", "ABSTAIN", "RECUSED"] },
              "Debugger": { "type": "string", "enum": ["YES", "NO", "ABSTAIN", "RECUSED"] },
              "Prophet": { "type": "string", "enum": ["YES", "NO", "ABSTAIN", "RECUSED"] }
            },
            "description": "Vote tally for this decision."
          },
          "dissents": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["personality", "opinion"],
              "properties": {
                "personality": { 
                  "type": "string",
                  "enum": ["Architect", "Engineer", "Debugger", "Prophet"]
                },
                "opinion": { "type": "string" }
              }
            },
            "description": "Minority opinions recorded for posterity. Dissents today may become doctrine tomorrow."
          }
        }
      },
      "description": "Record of significant decisions made by the Court."
    },
    "outstandingIssues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["issue", "severity"],
        "properties": {
          "issue": { "type": "string" },
          "severity": { "type": "string", "enum": ["Low", "Medium", "High", "Critical"] }
        }
      },
      "description": "Known issues or technical debt to be addressed."
    },
    "prophetVindications": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Rare moments when the Prophet was right."
    },
    "dissentVindications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["originalDecision", "dissenter", "prediction", "outcome"],
        "properties": {
          "originalDecision": { "type": "string" },
          "dissenter": { "type": "string" },
          "prediction": { "type": "string" },
          "outcome": { "type": "string" }
        }
      },
      "description": "When a dissenting opinion was later proven correct."
    },
    "nextSession": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Recommendations for the next session."
    }
  }
}
